{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "rootDir": "assets/ts",
    "outDir": "assets/js/lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "assets/ts"
  ],
  "exclude": [
    "node_modules",
    "assets/js*"
  ]
}